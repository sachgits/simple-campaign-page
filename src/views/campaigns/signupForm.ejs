	<section class="form">
		<form onsubmit="return SimpleCampaignPage.addPerson('<%= campaign._id %>', '<%= campaign.slug %>');">
			<input id="email" type="email" required placeholder="<%= getText(campaign, 'emailPlaceholder', defaults) %>">
			<input id="companyName" type="text" required placeholder="<%= getText(campaign, 'companyNamePlaceholder', defaults) %>">
			<button id="submitButton" type="submit"><%= getText(campaign, 'ctaTitle', defaults) %></button>
		</form>
	</section>